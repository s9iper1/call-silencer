<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.byteshaft.callsilence.MainActivity">


    <Switch
        android:text="@string/state"
        android:layout_margin="2dp"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/apptheme_switch_inner_holo_light"
        android:id="@+id/service_switch" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:layout_below="@+id/service_switch"
        android:text="@string/text"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/service_switch">

        <Button
            android:text="@string/rate_app"
            android:layout_gravity="left"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:drawableLeft="@mipmap/rate"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/apptheme_btn_default_holo_light"
            android:layout_height="wrap_content"
            android:id="@+id/rate_app" />

        <Button
            android:text="@string/share_app"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:drawableLeft="@android:drawable/ic_menu_share"
            android:layout_weight="1"
            android:background="@drawable/apptheme_btn_default_holo_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/share_app" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_launcher"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/imageView" />

</RelativeLayout>
